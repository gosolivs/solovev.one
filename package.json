{
  "name": "solovev.one",
  "private": true,
  "scripts": {
    "start": "parcel serve src/index.pug",
    "build": "parcel build --no-source-maps --no-cache --no-autoinstall --dist-dir ${OUTPUT_DIR} src/index.pug",
    "lint:styles": "stylelint src/**/*.css",
    "spell": "yaspeller src/data.json"
  },
  "devDependencies": {
    "@parcel/packager-raw-url": "^2.8.3",
    "@parcel/transformer-pug": "^2.8.3",
    "@parcel/transformer-webmanifest": "^2.8.3",
    "parcel": "^2.6.2",
    "postcss-pxtorem": "^6.0.0",
    "stylelint": "^13.12.0",
    "stylelint-config-recess-order": "^2.3.0",
    "stylelint-config-standard": "^21.0.0",
    "yaspeller": "^7.0.0"
  },
  "browserslist": [
    "> 3%",
    "not Explorer 11",
    "not ExplorerMobile 11",
    "not OperaMini all"
  ],
  "postcss": {
    "plugins": {
      "postcss-pxtorem": {
        "rootValue": 16,
        "mediaQuery": true,
        "propList": [
          "font",
          "font-size",
          "line-height",
          "letter-spacing",
          "margin",
          "padding"
        ]
      }
    }
  },
  "yaspeller": {
    "ignoreCapitalization": true,
    "ignoreRomanNumerals": true,
    "ignoreUrls": true,
    "dictionary": [
      "LinkedIn",
      "опенсорс",
      "фронтенд",
      "GitHub",
      "github",
      "solovev",
      "gosolivs",
      "sameAs",
      "mailto",
      "Evr",
      "ne",
      "evrone",
      "фрилансером",
      "vue",
      "js",
      ".*(m|M)eetup",
      "snowpack",
      "frontend",
      "фронтенды",
      "Podcast",
      "fullstack",
      "монорепы",
      "микрофронтенды"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-recess-order"
    ],
    "rules": {
      "block-no-empty": null
    }
  }
}
