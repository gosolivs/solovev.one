{
	"name": "solovev.one",
	"description": "My portfolio",
	"scripts": {
		"start": "parcel serve src/index.pug",
		"start:pages": "parcel serve src/*.pug",
		"build": "NODE_ENV=production node ./build.js",
		"spell": "yaspeller src/data.json"
	},
	"devDependencies": {
		"autoprefixer": "^9.8.0",
		"css-mqpacker": "^7.0.0",
		"husky": "^4.2.5",
		"lint-staged": "^10.2.2",
		"npm-run-all": "^4.1.5",
		"parcel-bundler": "^1.12.4",
		"postcss": "^7.0.30",
		"postcss-custom-properties": "^9.1.1",
		"postcss-flexbugs-fixes": "^4.2.1",
		"postcss-font-family-system-ui": "^4.2.0",
		"postcss-pxtorem": "^5.1.1",
		"posthtml": "^0.13.0",
		"pug": "^2.0.4",
		"yaspeller": "^7.0.0"
	},
	"browserslist": [
		"defaults",
		"not Explorer 11",
		"not ExplorerMobile 11",
		"not OperaMini all"
	],
	"postcss": {
		"plugins": {
			"postcss-pxtorem": {
				"rootValue": 16,
				"mediaQuery": true,
				"propList": [
					"font",
					"font-size",
					"line-height",
					"letter-spacing",
					"margin",
					"padding"
				]
			},
			"postcss-flexbugs-fixes": {},
			"postcss-font-family-system-ui": {},
			"autoprefixer": {}
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"src/data.json": [
			"yarn spell",
			"git add"
		]
	},
	"yaspeller": {
		"ignoreCapitalization": true,
		"dictionary": [
			"опенсорс",
			"frontend",
			"фронтенд",
			"GitHub",
			"github",
			"solovev",
			"isolovev",
			"sameAs",
			"mailto",
			"Evr",
			"ne",
			"evrone",
			"фрилансером"
		]
	},
	"dependencies": {
		"section": "^0.4.2"
	}
}
