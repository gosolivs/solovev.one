{
	"name": "solovev.one",
	"description": "My portfolio",
	"scripts": {
		"start": "parcel serve src/pages/*.pug",
		"build": "NODE_ENV=production node ./build.js",
		"compress": "node ./compress.js",
		"production": "yarn build && yarn compress",
		"lint:typescript": "tsc && tslint -p ./tsconfig.json -c ./tslint.json",
		"spell": "yaspeller dist/*.html",
		"test": "yarn lint:typescript && yarn build && yarn spell"
	},
	"dependencies": {
		"intersection-observer": "^0.5.1"
	},
	"devDependencies": {
		"@gfx/zopfli": "^1.0.11",
		"autoprefixer": "^9.4.7",
		"chalk": "^2.4.2",
		"css-mqpacker": "^7.0.0",
		"husky": "^1.3.1",
		"iltorb": "^2.4.2",
		"lint-staged": "^8.1.5",
		"npm-run-all": "^4.1.5",
		"p-queue": "^4.0.0",
		"parcel-bundler": "^1.11.0",
		"postcss": "^7.0.14",
		"postcss-custom-properties": "^8.0.9",
		"postcss-flexbugs-fixes": "^4.1.0",
		"postcss-font-family-system-ui": "^4.1.0",
		"postcss-pxtorem": "^4.0.1",
		"posthtml": "^0.11.3",
		"pug": "^2.0.3",
		"recursive-readdir": "^2.2.2",
		"terser": "^3.17.0",
		"tslint": "^5.12.1",
		"typescript": "^3.3.3",
		"yaspeller": "^5.0.1"
	},
	"browserslist": [
		"defaults",
		"not Explorer 11",
		"not ExplorerMobile 11",
		"not OperaMini all"
	],
	"postcss": {
		"plugins": {
			"postcss-pxtorem": {
				"rootValue": 16,
				"mediaQuery": true,
				"propList": [
					"font",
					"font-size",
					"line-height",
					"letter-spacing",
					"margin",
					"padding"
				]
			},
			"postcss-flexbugs-fixes": {},
			"postcss-font-family-system-ui": {},
			"autoprefixer": {}
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.ts": [
			"tsc --noEmit",
			"tslint -p ./tsconfig.json -c ./tslint.json"
		],
		"*.pug": [
			"yarn build",
			"yarn spell",
			"git add"
		]
	},
	"yaspeller": {
		"ignoreCapitalization": true,
		"dictionary": [
			"Frontend",
			"GitHub",
			"solovev"
		]
	}
}
