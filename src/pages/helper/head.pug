- var siteName = "Иван Соловьев – Frontend разработчик";

mixin head(title)
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no,viewport-fit=cover")
		meta(http-equiv="x-ua-compatible" content="ie=edge")

		link(rel="stylesheet" href="../index.css")
		title= title ? `${title}. ${siteName}` : siteName
		meta(name="description" content="Фронтенд разработчик умеюший сделать хорошо")

		link(rel="mask-icon" href="../assets/icons/logo.svg" color="#d82a4a")
		link(rel="icon" type="image/png" sizes="192x192" href="../assets/icons/192.png")
		link(rel="manifest" href="../assets/manifest.webmanifest")
		meta(name="theme-color" content="#d82a4a")

		meta(name="twitter:creator" content="@solovev_one")
		meta(property="og:locale" content="ru_RU")
		meta(property="og:type" content="website")

		block
